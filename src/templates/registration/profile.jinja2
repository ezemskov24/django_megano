{% extends 'base.jinja2' %}

{% block title %}
  Profile
{% endblock %}

{% block header %}
  {% include 'common/header_full.jinja2' %}
{% endblock %}

{% block content %}
    <link href="{{ static('assets/css/profile_style.css') }}" rel="stylesheet">

    <div class="Middle Middle_top">
        <div class="Section Section_column Section_columnLeft">
            <div class="wrap">
                {% include 'navigation/navigation.jinja2' %}

                <div class="Section-content">
                    <div class="Profile">
                        <form class="form Profile-form" method="post" enctype="multipart/form-data">
                        {% csrf_token %}
                            <div class="row">
                                <div class="row-block">
                                    <div class="form-group">
                                        <label class="form-label" for="avatar">Аватар</label>
                                        <div class="Profile-avatar Profile-avatar_noimg">
                                            <label class="Profile-fileLabel" for="avatar"
                                                   style="width: 100%;
                                                          height: 100%;
                                                          margin: 0;
                                                          top: 0;
                                                          left: 0;">
                                                {% if profile.avatar %}
                                                    <div style="width: 100%; height: 100%;
                                                background: url('{{ profile.avatar.url }}') no-repeat center;
                                                background-size: contain" id="coverPreview">
                                                {% else %}
                                                    <div style="width: 100%; height: 100%;
                                                background: url('/static/assets/img/icons/blankphoto.jpg') no-repeat center;
                                                background-size: contain">
                                                {% endif %}
                                                    <input type="file" name="avatar" accept="image/*" id="cover"
                                                           style="height: 100%; opacity: 0;">
                                                    </div>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label" for="username">ФИО
{#                                          {% set full_name = user.username +  + user.first_name %}#}
                                            <input class="form-input" id="name" name="username" type="text"
                                                   style="text-transform: capitalize"
                                                   value="{{ user.username }} {{ user.first_name }} {{ user.last_name }}"
                                                   data-validate="require" />
                                        </label>
                                    </div>
                                     {% if form.errors %}
                                          <div style="color: red">
  {#                                          <strong>There was an error:</strong>#}
                                              <ul>
                                                  {% for field in form %}
                                                      {% if field.errors %}
                                                          {% for error in field.errors %}
                                                              <li class="error_text">{{ field.label }}: {{ error }}</li>
                                                          {% endfor %}
                                                      {% endif %}
                                                  {% endfor %}
                                              </ul>
                                          </div>
                                      {% endif %}
                                </div>
                                <div class="row-block">
                                    <div class="form-group">
                                        <label class="form-label" for="phone">Телефон</label>
                                        {% if not profile.phone %}
                                            <input type="text" name="phone" value='+7 (___) ___-__-__' id="id_phone"
                                            style="color: grey; background-color: #f9fafc">
                                        {% else %}
                                            <input type="text" name="phone" value={{ profile.phone }} id="id_phone">
                                        {% endif %}
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label" for="mail">E-mail
                                        </label>
                                        <input class="form-input" id="mail" name="mail" type="text" value={{ profile.email }} data-validate="require" />
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label" for="password">Пароль</label>
                                        <input class="form-input" id="id_new_password1" name="new_password1" type="password" placeholder="Тут можно изменить пароль">
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label" for="passwordReply">Подтверждение пароля</label>
                                      <input class="form-input" id="id_new_password2" name="new_password2" type="password" placeholder="Введите пароль повторно">
                                    </div>
                                    <div class="form-group">
                                        <div class="Profile-btn">
                                            <button class="btn btn_success" type="submit">Сохранить</button>
                                        </div>
                                        {% if messages %}
                                            <ul class="messages">
                                                {% for message in messages %}
                                                    <li {% if message.tags %}
                                                      class="{{ message.tags }}"
                                                    {% endif %}>
                                                      {{ message }}
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

<script>
    let coverPreview = document.getElementById('coverPreview');
    let cover = document.getElementById('cover');

    coverPreview.addEventListener('click',_=>cover.click());

    cover.addEventListener("change",_=>{
        let file = cover.files[0];
        console.log(file.mozFullPath);
        let reader = new FileReader();
        reader.onload = function (){
            coverPreview.src = reader.result; }
        file.name;
    });
</script>

<script src="{{ static('admin/js/vendor/jquery/jquery.min.js') }}"></script>
{#<script src="{{ static('assets/js/form_validation.js') }}"></script>#}
<script src="{{ static('assets/js/inputmask.min.js') }}"></script>
<script src="{{ static('assets/js/mask.js') }}"></script>
{% endblock %}
